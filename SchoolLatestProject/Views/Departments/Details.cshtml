@model SchoolLatestProject.Models.Department

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/SchoolLayout.cshtml";
}

<div class="form-group" style="font-size:15px">
    <div class="panel panel-info">
        <div class="panel-heading" style="font-size:18px"><strong><span></span> Department Information </strong></div>
        <div class="panel-body">
            <div class="form-horizontal col-sm-12">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.HeadDepartmentName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.HeadDepartmentName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.MobileNo)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MobileNo)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TotalNoTeachers)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TotalNoTeachers)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.DepartmentDetails)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DepartmentDetails)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.DepartmentName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DepartmentName)
                    </dd>

                </dl>
            </div>
        </div>
    </div>
</div>
<p>
    <div class="btn-group" style="margin-left:150px">
        <button id="addRow" class="btn btn-grd-info">
            <i class="glyphicon glyphicon-pencil"></i> @Html.ActionLink("Edit", "Edit", new { id = Model.DepartmentID })
        </button>
    </div>
    <div class="btn-group" style="margin-left:0px">
        <button id="addRow" class="btn btn-grd-success">
            <i class="glyphicon glyphicon-list"></i> @Html.ActionLink("All Department List", "Index")
        </button>
    </div>

</p>

