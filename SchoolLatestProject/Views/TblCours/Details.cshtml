@model SchoolLatestProject.Models.TblCours

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/SchoolLayout.cshtml";
}

<div class="form-group" style="font-size:15px">
    <div class="panel panel-info">
        <div class="panel-heading" style="font-size:18px"><strong><span></span> About Course Information </strong></div>
        <div class="panel-body">
            <div class="form-horizontal col-sm-12">
                <div>
                    <h4>TblCours</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.CourseName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.CourseName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.CourseDetails)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.CourseDetails)
                        </dd>

                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
<p>
    <div class="btn-group" style="margin-left:150px">
        <button id="addRow" class="btn btn-grd-info">
            <i class="glyphicon glyphicon-pencil"></i> @Html.ActionLink("Edit", "Edit", new { id = Model.CourseID })
        </button>
    </div>
    <div class="btn-group" style="margin-left:0px">
        <button id="addRow" class="btn btn-grd-success">
            <i class="glyphicon glyphicon-list"></i> @Html.ActionLink("All Course list", "Index")
        </button>
    </div>
</p>

