@model SchoolLatestProject.Models.Employee

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/SchoolLayout.cshtml";
}

<div class="form-group" style="font-size:15px">
    <div class="panel panel-info">
        <div class="panel-heading" style="font-size:18px"><strong><span></span> Employee Profile Information </strong></div>
        <div class="panel-body">
            <div class="form-horizontal col-sm-12">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.UserNo)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.UserNo)
                    </dd>

                    <dt>
                        @Html.Label("Full Name")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.FirstName)
                        @Html.DisplayFor(model => model.MiddleName)
                        @Html.DisplayFor(model => model.LastName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Gender)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Gender)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.DateOfBirth)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DateOfBirth)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Position)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Position)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.MaritalStatus)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MaritalStatus)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Salary)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Salary)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.HireDate)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.HireDate)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.EmployeeType)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.EmployeeType)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Nationality)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Nationality)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Religion)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Religion)
                    </dd>
                    <dt>
                        @Html.Label("Department Name")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Department.DepartmentName)
                    </dd>

                    <dt>
                        @Html.Label("Education Level")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.EducationLevel.Description)
                    </dd>

                    <dt>
                        @Html.Label("Field Of Study")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.FieldOfStudy.Description)
                    </dd>

                    <dd style="margin-left:500px;margin-top:-300px">
                        <img src="@Url.Content(Model.ImagePath)" width="200" height="200" />
                    </dd>
                </dl>
            </div>
            </div>
        </div>
    </div>
<p>
    <div class="btn-group" style="margin-left:150px">
        <button id="addRow" class="btn btn-grd-info">
            <i class="glyphicon glyphicon-pencil"></i> @Html.ActionLink("Edit", "Edit", new { id = Model.EmployeeId })
        </button>
    </div>
    <div class="btn-group" style="margin-left:0px">
        <button id="addRow" class="btn btn-grd-success">
            <i class="glyphicon glyphicon-list"></i> @Html.ActionLink("All Employee list", "Index")
        </button>
    </div>
</p>








