@model SchoolLatestProject.Models.Employee

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/SchoolLayout.cshtml";
}



@using (Html.BeginForm("Create", "Employees", FormMethod.Post, new { enctype = "multipart/form-data" }))
